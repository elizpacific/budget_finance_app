<style>
    html, body {
        height: 100%;
        margin: 0;
    }

    .container {
        width: 1170px;
        margin: 0px auto;
        display: block;
        height: 100%;
    }

    .container-fluid{
        float: left;
        width: 100%;
        height: 100%;
    }

    .leftnav{
        float: left;
        width: 280px;
        height: 100%;
    }

</style>

<div class="container">
  <div class="container-fluid">
    <div class="leftnav">
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <div class="alert alert-light">
            <%= form_for :card, url: card_path(@card), method: :patch do |f| %>
              <p class="card-text">Name: <%= f.text_field(:name, {:class => 'form-control'}) %></p>
              <p>
              <div class="cards">
                <%= f.submit %>
              </div>
              </p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>